<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/title_bar_normal_mode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_h"
        android:layout_gravity="center_vertical"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/title_bar_normal_mode"
        android:layout_marginTop="10dp"
        android:background="@color/gray_five" >

        <TextView
            android:id="@+id/tvshow"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/skyblue"
            android:gravity="center|left"
            android:text="登录名"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tvshow"
            android:background="@drawable/bukeshuru"
            android:gravity="center|left"
            android:textColor="#464d4c"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlcode"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/show"
        android:layout_marginTop="1dp"
        android:background="@color/gray_five" >

        <TextView
            android:id="@+id/code"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/skyblue"
            android:gravity="center|left"
            android:text="旧密码"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/codevalue"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/code"
            android:background="@drawable/keshuru"
            android:gravity="center|left"
            android:password="true"
            android:singleLine="true"
            android:text=""
            android:textColor="#464d4c"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlsn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rlcode"
        android:layout_marginTop="1dp"
        android:background="@color/gray_five" >

        <TextView
            android:id="@+id/sn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/skyblue"
            android:gravity="center|left"
            android:text="新密码"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/snvalue"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/sn"
            android:background="@drawable/keshuru"
            android:gravity="center|left"
            android:password="true"
            android:singleLine="true"
            android:text=""
            android:textColor="#464d4c"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlconfirm"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rlsn"
        android:layout_marginTop="1dp"
        android:background="@color/gray_five" >

        <TextView
            android:id="@+id/confirm"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/skyblue"
            android:gravity="center|left"
            android:text="确认密码"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirmvalue"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/confirm"
            android:background="@drawable/keshuru"
            android:gravity="center|left"
            android:password="true"
            android:singleLine="true"
            android:text=""
            android:textColor="#464d4c"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rlconfirm"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_normal_selector"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

</RelativeLayout>